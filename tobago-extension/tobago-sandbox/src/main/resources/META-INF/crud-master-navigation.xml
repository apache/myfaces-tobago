<ui:composition
    xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:tc="http://myfaces.apache.org/tobago/component"
	xmlns:tfs="http://myfaces.apache.org/tobago/facelet-sandbox">
	
	<c:if test="${empty showNavigation}">
		<c:set var="showNavigation" value="false" />
	</c:if>
	<c:set var="replaceNavigation" value="true" />
	<c:if test="${empty navigationMasterSource}" >
		<c:set var="replaceNavigation" value="false" />
	</c:if>
	
	<!-- master navigation area -->
	<tc:panel>
		<f:facet name="layout">
			<tc:gridLayout columns="fixed;*;fixed;fixed;fixed" />
		</f:facet>
		<tc:button action="${controller.createItem}"
			label="Neues Element" />
		<tc:cell />
		<tc:button action="${controller.showItem}"
			label="Element anzeigen" />
		<tc:button action="${controller.editItem}"
			label="Element editieren" />
		<tc:button
			action="${controller.deleteItem}"
			label="Element löschen">
			<f:facet name="confirmation">
				<tc:out
					value="Möchten Sie die ausgewählten Items wirklich löschen?" />
			</f:facet>
		</tc:button>							
	</tc:panel>
					
</ui:composition>
