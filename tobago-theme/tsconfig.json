{
  "compilerOptions": {
    "module": "es6",
    "target": "ES2015",
    "noImplicitAny": false,
    "moduleResolution": "bundler",
    "rootDir": "tobago-theme-standard/src/main/ts",
    "sourceRoot": "../ts",
    "outDir": "tobago-theme-standard/src/main/js",
    "sourceMap": true,
    "inlineSources": true,
    "removeComments": false,
    "noEmitOnError": true
  },
  "include": [
    "tobago-theme-standard/src/main/ts/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
