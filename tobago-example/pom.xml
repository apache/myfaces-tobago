    <profile>
      <id>tomee</id>
      <dependencies>
        <dependency>
          <groupId>org.apache.myfaces.core</groupId>
          <artifactId>myfaces-api</artifactId>
          <version>${myfaces30.version}</version>
          <scope>provided</scope>
        </dependency>
