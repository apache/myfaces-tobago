    </profile>

    <profile>
      <id>myfaces-2.3</id>
      <activation>
        <property>
          <name>!jsf</name>
          <!--          <name>jsf</name>-->
          <!--          <value>myfaces-2.3</value>-->
        </property>
      </activation>
      <dependencies>
        <dependency>
          <groupId>org.apache.myfaces.core</groupId>
          <artifactId>myfaces-api</artifactId>
          <version>${myfaces23.version}</version>
